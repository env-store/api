{
  "root": true,
  "extends": ["@edubeyond/eslint-config-edubeyond"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "warn",
    "unicorn/number-literal-case": "off",
    "unicorn/prevent-abbreviations": [
      "error",
      {
        "replacements": {
          "args": false,
          "params": false,
          "props": false,
          "req": false,
          "res": false,
          "env": false,
          "db": false
        }
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "printWidth": 100
      }
    ]
  }
}
